@model SchoolJournal.Models.Course

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>DELETE</h2>
<h3>Are you sure you want to delete this information?</h3>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(t => t.CourseID)</dt>
        <dd>@Html.DisplayFor(t => t.CourseID)</dd>

        <dt>@Html.DisplayNameFor(t => t.CourseName)</dt>
        <dd>@Html.DisplayFor(t => t.CourseName)</dd>

        <dt>@Html.DisplayNameFor(t => t.LevelYear)</dt>
        <dd>@Html.DisplayFor(t => t.LevelYear)</dd>

        <dt>@Html.DisplayNameFor(t => t.Teachers.TeacherName)</dt>
        <dd>@Html.DisplayFor(t => t.Teachers.TeacherName)</dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Index", "Course")
        </div>
    }
</div>

