@model SchoolJournal.Models.Course

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>ADD COURSE</h2>

@using (Html.BeginForm("Create", "Course", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


<div class="form-horizontal">
    <h4>Course details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(t => t.CourseName, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(t => t.CourseName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(t => t.CourseName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.LevelYear, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(t => t.LevelYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(t => t.LevelYear, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Teachers.TeacherName, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownListFor(t => t.TeacherID, Model.TeachersList, "Please select")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to list", "Index", "Course")
</div>