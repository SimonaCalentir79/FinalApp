@model SchoolJournal.Models.Semester

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>EDIT</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.SemesterID)

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.SemesterNumber)</dt>
        <dd>
            @Html.TextBoxFor(m => m.SemesterNumber, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SemesterNumber)
        </dd>

        <dt>@Html.DisplayNameFor(m => m.SchoolYear)</dt>
        <dd>
            @Html.TextBoxFor(m => m.SchoolYear, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SchoolYear)
        </dd>
    </dl>

    <input type="submit" value="Save" class="btn btn-primary" />
    @Html.ActionLink("Cancel", "Index", "Semester");
}
