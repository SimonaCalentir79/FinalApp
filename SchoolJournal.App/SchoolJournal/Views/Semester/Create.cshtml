@model SchoolJournal.Models.Semester

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>ADD SEMESTER</h2>

@using (Html.BeginForm("Create", "Semester", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Semester details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(t => t.SemesterNumber, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(t => t.SemesterNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.SemesterNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.SchoolYear, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(t => t.SchoolYear, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.SchoolYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
        @*<div class="form-group">
                <div class="col-md-offset-3 col-md-9 text-success">
                    @ViewBag.FileStatus
                </div>
            </div>*@
    </div>
}
<div>
    @Html.ActionLink("Back to list", "Index", "Semester")
</div>