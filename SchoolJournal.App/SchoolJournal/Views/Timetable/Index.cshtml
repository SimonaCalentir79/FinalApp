@model IEnumerable<SchoolJournal.Models.Timetable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Students.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfTheWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeInterval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.CourseName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Students.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfTheWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeInterval)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Courses.CourseName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TimetableID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TimetableID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TimetableID })
        </td>
    </tr>
}

</table>
