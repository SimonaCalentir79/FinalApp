@model SchoolJournal.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>DELETE</h2>
<h3>Are you sure you want to delete this information?</h3>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(t => t.StudentID)</dt>
        <dd>@Html.DisplayFor(t => t.StudentID)</dd>

        <dt>@Html.DisplayNameFor(t => t.StudentName)</dt>
        <dd>@Html.DisplayFor(t => t.StudentName)</dd>

        <dt>@Html.DisplayNameFor(t => t.Observations)</dt>
        <dd>@Html.DisplayFor(t => t.Observations)</dd>

        <dt>@Html.DisplayNameFor(t => t.StudentPhoto)</dt>
        <dd><img src="~/UploadedFiles/@Model.StudentPhoto" style="width:175px;height:200px" /></dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Index", "Student")
        </div>
    }
</div>


