@model SchoolJournal.Models.Student

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>EDIT</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.StudentID)

<dl class="dl-horizontal">
    <dt>@Html.DisplayNameFor(m => m.StudentName)</dt>
    <dd>
        @Html.TextBoxFor(m => m.StudentName, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.StudentName)
    </dd>

    <dt>@Html.DisplayNameFor(m => m.Observations)</dt>
    <dd>
        @Html.TextBoxFor(m => m.Observations, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Observations)
    </dd>

    <dt>@Html.DisplayNameFor(m => m.StudentPhoto)</dt>
    <dd>
        <img src="~/UploadedFiles/@Model.StudentPhoto" style="width:175px;height:200px" />
        <input type="file" name="imageFile" />
    </dd>
</dl>

    <input type="submit" value="Save" class="btn btn-primary" />
    @Html.ActionLink("Cancel", "Index", "Student");
}