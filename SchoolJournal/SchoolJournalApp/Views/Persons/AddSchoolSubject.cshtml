
@{
    ViewBag.Title = "AddSchoolSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SchoolJournalModels.Subjects
@section Scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/ScriptMonica.js"></script>
}

<h2>Add school subject</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-3">
                <label for="formGroupExampleInput">School subject</label>
            </div>
            <div class="col-md-9">
                @Html.EditorFor(s => s.SubjectName, new { htmlAttributes = new { @class = "form-control", @id= "schoolSubject", placeholder = "School subject", type = "text" } })
                @Html.ValidationMessageFor(s => s.SubjectName, "", new { @class = "text-danger" })
            </div>
            <br />
            <br />
            <br />
            <div class="control-label col-md-3">
                <label for="formGroupExampleInput">Level year</label>
            </div>
            <div class="col-md-9">
                @Html.EditorFor(s => s.LevelYear, new { htmlAttributes = new { @class = "form-control", @id = "levelYear", placeholder = "Level year", type = "number" } })
                @Html.ValidationMessageFor(s => s.LevelYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </div>
}