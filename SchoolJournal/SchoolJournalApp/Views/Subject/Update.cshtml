@model SchoolJournalModels.Subject

<div>
    <h2>UPDATE</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.SubjectID)
        <div class="form-group">
            @Html.LabelFor(s => s.SubjectName)
            @Html.TextBoxFor(s => s.SubjectName, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.SubjectName)
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.LevelYear)
            @Html.TextBoxFor(s => s.LevelYear, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.LevelYear)
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.Teacher.TeacherName)
            @*combo list for selection*@
            @*@Html.DropDownList("teachers",new SelectList(ViewBag.data, "TeacherID","TeacherName"))*@
        </div>

        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", "Subject");
    }
</div>