@model SchoolJournalModels.Student

<div>
    <h2>DETAILS</h2>
    <br />
    <p><label>ID: </label>@Model.StudentID</p>
    <br />
    <h3><label>Name:</label>@Model.StudentName</h3>
    <br />
    <p><label>Details:</label>@Model.Observations</p>
    <br />
    @*<p>Photo: <img src="~/images/@Model.StudentPhotoURL" width="100" height="100" /></p>*@
    <p>
        <label>Photo: </label>
        @if (@Model.StudentPhoto != null)
        {
            <img src="~/Images/@Model.StudentPhoto" width="75" height="100" />
        }
        else
        {
            <img src="~/Images/avatar.JPG" width="75" height="100" />
        }
    </p>
    <br />

    <br />
    <p>@Html.ActionLink("Back to students", "Index", "Student") | @Html.ActionLink("Back to homeworks", "Index", "Homework")</p>
</div>
