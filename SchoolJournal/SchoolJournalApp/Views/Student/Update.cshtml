@model SchoolJournalModels.Student

<div>
    <h2>UPDATE</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.StudentID)
        <div class="form-group">
            @Html.LabelFor(s => s.StudentName)
            @Html.TextBoxFor(s => s.StudentName, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.StudentName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.Observations)
            @Html.TextBoxFor(s => s.Observations, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Observations, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.StudentPhoto)
            <div class="col-md-9">
                @if (@Model.StudentPhoto != null)
                {
                    <img src="~/Images/@Model.StudentPhoto" width="100" height="100" />
                }
                else
                {
                    <img src="~/Images/avatar.JPG" width="100" height="100" />
                }
                @Html.TextBoxFor(s => s.StudentPhoto, null, new { type = "file" })
                @Html.ValidationMessageFor(s => s.StudentPhoto, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", "Student");
    }
</div>