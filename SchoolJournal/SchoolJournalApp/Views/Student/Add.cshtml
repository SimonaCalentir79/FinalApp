@model SchoolJournalModels.Student

<h2>ADD STUDENT</h2>

@using (Html.BeginForm("Add","Student",FormMethod.Post, new { enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Student details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(s => s.StudentName, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(s => s.StudentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(s => s.StudentName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(s => s.Observations, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(s => s.Observations, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(s => s.Observations, "", new { @class = "text-danger" })
        </div>
    </div>


    <form action="~/Images/" method="post" enctype="multipart/form-data">
        @Html.LabelFor(s => s.StudentPhoto, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(s => s.StudentPhoto, new { type = "file" })
            @Html.ValidationMessageFor(s => s.StudentPhoto, "", new { @class = "text-danger" })
        </div>
    </form>
    <br />
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to list", "Index", "Student")
</div>
