@model SchoolJournalModels.Student


<h2>DELETE</h2>
<h3>Are you sure you want to delete this information?</h3>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(s => s.StudentID)
        </dt>
        <dd>
            @Html.DisplayFor(s => s.StudentID)
        </dd>

        <dt>
            @Html.DisplayNameFor(s => s.StudentName)
        </dt>
        <dd>
            @Html.DisplayFor(s => s.StudentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(s => s.Observations)
        </dt>
        <dd>
            @Html.DisplayFor(s => s.Observations)
        </dd>

        <dt>
            @Html.DisplayNameFor(s => s.StudentPhoto)
        </dt>
        <dd>
            @if (@Model.StudentPhoto != null)
            {
                <img src="~/Images/@Model.StudentPhoto" width="75" height="100" />
            }
            else
            {
                <img src="~/Images/avatar.JPG" width="75" height="100" />
            }
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Index", "Student")
        </div>
    }
</div>