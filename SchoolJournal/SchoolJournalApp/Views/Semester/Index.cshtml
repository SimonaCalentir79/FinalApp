
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SchoolJournalModels.Semester>

<br />
<h2>SEMESTERS (@Model.Count records)</h2>
<br />
<div>
    <p>
        <strong>@Html.ActionLink("ADD NEW SEMESTER", "Add", "Semester")</strong>
    </p>
</div>
<br />
<div>
    @using (Html.BeginForm("Index", "Semester", FormMethod.Get))
    {
        <b>Search option: </b>
        @Html.RadioButton("option", "Number")<text> Semester Number </text>
        @Html.RadioButton("option", "Year")<text> Year </text>
        @Html.TextBox("search") <input type="submit" value="Search" class="btn btn-primary" />
    }
</div>
<br />
<div class="table-responsive">
    <table class="table table-hover table-responsive-sm">
        <thead class="thead-dark">
            <tr>
                <th><b>Semester Number</b></th>
                <th><b>School Year</b></th>
                <th>@*<input class="form-control" id="myInput" type="text" placeholder="Search..">*@</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3">
                        <i>Records not found</i>
                    </td>
                </tr>
            }
            else
            {
                foreach (var semester in Model)
                {
                    <tr>
                        <td>@semester.SemesterNumber</td>
                        <td>@semester.SchoolYear</td>
                        <td>@Html.ActionLink("Details", "Details", "Semester", new { @id = semester.SemesterID }, null) | 
                            @Html.ActionLink("Edit", "Update", "Semester", new { @id = semester.SemesterID }, null) | 
                            @Html.ActionLink("Delete", "Delete", "Semester", new { @id = semester.SemesterID }, null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    @Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber, option = Request.QueryString["option"], search = Request.QueryString["search"] }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount semesters
</div>
