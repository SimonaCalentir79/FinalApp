
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SchoolJournalModels.Course>

<h2>COURSES (@Model.Count() records)</h2>

<div>
    <p><strong>@Html.ActionLink("ADD NEW COURSE", "Add", "Course")</strong></p>
</div>
<br />
<div>
    @using (Html.BeginForm("Index", "Course", FormMethod.Get))
    {
        <b>Search option: </b>
        @Html.RadioButton("option", "Subject")<text> Course </text>
        @Html.RadioButton("option", "Level")<text> Level year </text>
        @Html.RadioButton("option", "Teacher")<text> Teacher </text>
        @Html.TextBox("search") <input type="submit" value="Search" class="btn btn-primary" />
    }
</div>
<div class="table-responsive">
    <table class="table table-hover table-responsive-sm">
        <thead class="thead-dark">
            <tr>
                <th><b>Course</b></th>
                <th><b>Level year</b></th>
                <th><b>Teacher</b></th>
                <th>@*<input class="form-control" id="myInput" type="text" placeholder="Search..">*@</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">
                        <i>Records not found</i>
                    </td>
                </tr>
            }
            else
            {
                foreach (var subj in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => subj.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => subj.LevelYear)
                        </td>
                        <td>
                            @Html.ActionLink(@Html.DisplayFor(m => subj.Teachers.TeacherName).ToString(), "Details", "Teacher", new { id = subj.TeacherID }, null)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", "Course", new { id = subj.CourseID }, null) |
                            @Html.ActionLink("Edit", "Update", "Course", new { id = subj.CourseID }, null) |
                            @Html.ActionLink("Delete", "Delete", "Course", new { id = subj.CourseID }, null)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    @Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber, option = Request.QueryString["option"], search = Request.QueryString["search"] }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount courses
</div>
