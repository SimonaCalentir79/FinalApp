@model SchoolJournalModels.Course

<div>
    <h2>UPDATE</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.CourseID)
        <div class="form-group">
            @Html.LabelFor(s => s.CourseName)
            @Html.TextBoxFor(s => s.CourseName, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.CourseName)
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.LevelYear)
            @Html.TextBoxFor(s => s.LevelYear, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.LevelYear)
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.Teachers.TeacherName)
            @Html.DropDownListFor(s => s.TeacherID, new SelectList(Model.TeachersList, "Value", "Text"))
        </div>

        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", "Course");
    }
</div>