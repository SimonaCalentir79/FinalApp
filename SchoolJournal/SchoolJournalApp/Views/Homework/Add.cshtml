@model SchoolJournalModels.Homework

<h2><strong>ADD HOMEWORK</strong></h2>
@{ 
    var homework = ViewBag.CurrentHW;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Homework details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(h => h.Students.StudentName, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(h => h.StudentID, new SelectList(Model.StudentsList, "Value", "Text"))
                @Html.ValidationMessageFor(h => h.StudentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(h => h.Courses.CourseName, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(h => h.CourseID, new SelectList(Model.CoursesList, "Value", "Text"))
                @Html.ValidationMessageFor(h => h.CourseID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(h => h.DateOfHomework, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(h => h.DateOfHomework, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(h => h.DateOfHomework, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(h => h.DueDate, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(h => h.DueDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(h => h.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(h => h.Details, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(h => h.Details, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(h => h.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(h => h.HomeworkStatus, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("HomeworkStatus", new List<SelectListItem> { new SelectListItem { Text="TO DO", Value="TO DO"},
                                                                        new SelectListItem { Text="IN PROGRESS", Value="IN PROGRESS"},
                                                                        new SelectListItem { Text="FINISHED", Value="FINISHED"} },"Select status")
                @Html.ValidationMessageFor(h => h.HomeworkStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to list", "Index", "Homework")
</div>
