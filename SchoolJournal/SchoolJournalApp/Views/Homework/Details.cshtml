@model  SchoolJournalModels.Homework

<div>
    <h2>DETAILS</h2>
    <br />
    <p>@Html.DisplayNameFor(h => h.HomeworkID): @Model.HomeworkID</p>
    <p>@Html.DisplayNameFor(h => h.Students.StudentName): @Html.ActionLink(@Model.Students.StudentName.ToString(), "Details", "Student", new { id = Model.StudentID }, null)</p>
    <br />
    <h3>@Html.DisplayNameFor(h => h.Courses.CourseName): @Html.ActionLink(@Model.Courses.CourseName.ToString(), "Details", "Subject", new { id = Model.CourseID }, null)</h3>

    <p>@Html.DisplayNameFor(h => h.DateOfHomework): @Model.DateOfHomework</p>
    <br />
    <p>@Html.DisplayNameFor(h => h.DueDate): @Model.DueDate</p>
    <br />
    <p>@Html.DisplayNameFor(h => h.Details): @Model.Details</p>
    <br />
    <p>@Html.DisplayNameFor(h => h.HomeworkStatus): @Model.HomeworkStatus</p>
    <br />
    <p>@Html.ActionLink("Back to list", "Index", "Homework")</p>
</div>

