@model SchoolJournalModels.Grade

<h2><strong>ADD GRADE</strong></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Grade details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(g => g.Students.StudentName, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownListFor(g => g.StudentID, new SelectList(Model.StudentsList, "Value", "Text"))
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Courses.CourseName, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownListFor(g => g.CourseID, new SelectList(Model.CoursesList, "Value", "Text"))
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Semesters.SemesterNumber, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownListFor(g => g.SemesterID, new SelectList(Model.SemestersList, "Value", "Text"))
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Mark, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(g => g.Mark, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(g => g.Mark, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.DateOfMark, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(g => g.DateOfMark, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(g => g.DateOfMark, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.GradingWeight, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(g => g.GradingWeight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(g => g.GradingWeight, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Observations, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(g => g.Observations, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(g => g.Observations, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Cancel", "Index", "Grade")
</div>
