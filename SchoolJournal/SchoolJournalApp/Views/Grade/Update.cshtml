@model SchoolJournalModels.Grade

<div>
    <h2>UPDATE</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(g => g.GradeID)
        <div class="form-group">
            @Html.LabelFor(g => g.Students.StudentName)
            @Html.DropDownListFor(g => g.StudentID, new SelectList(Model.StudentsList, "Value", "Text"))
        </div>
        <div class="form-group">
            @Html.LabelFor(g => g.Courses.CourseName)
            @Html.DropDownListFor(g => g.CourseID, new SelectList(Model.CoursesList, "Value", "Text"))
        </div>
        <div class="form-group">
            @Html.LabelFor(g => g.Semesters.SemesterNumber)
            @Html.DropDownListFor(g => g.SemesterID, new SelectList(Model.SemestersList, "Value", "Text"))
        </div>
        <div class="form-group">
            @Html.LabelFor(g => g.Mark)
            @Html.TextBoxFor(g => g.Mark, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(g => g.Mark)
        </div>
        <div class="form-group">
            @Html.LabelFor(g => g.DateOfMark)
            @Html.TextBoxFor(g => g.DateOfMark, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(g => g.DateOfMark)
        </div>
                <div class="form-group">
            @Html.LabelFor(g => g.GradingWeight)
            @Html.TextBoxFor(g => g.GradingWeight, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(g => g.GradingWeight)
        </div>
        <div class="form-group">
            @Html.LabelFor(g => g.Observations)
            @Html.TextBoxFor(g => g.Observations, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(g => g.Observations)
        </div>

        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", "Grade");
    }
</div>